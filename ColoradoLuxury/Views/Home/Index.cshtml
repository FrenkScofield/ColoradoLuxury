@{
    ViewData["Title"] = "Home Page";
}
<style>
    .BookingSummary .col-lg-4 .mainBetDriver {
        margin-bottom: 15px;
    }

    .bettingMonyBtn {
        height: 45px;
        width: 45px;
        font-size: 23px;
        font-weight: bold;
        border-radius: 37px;
        background-color: transparent;
        border: 2px solid #c1a926;
        color: #c1a926;
        margin-right: 9px;
        margin-bottom: 13px;
    }

    .active1 {
        height: 45px;
        width: 45px;
        font-size: 23px;
        font-weight: bold;
        border-radius: 37px;
        background-color: #c1a926;
        border: 2px solid #ffffff;
        color: #ffffff;
    }
</style>
<section class="mainImg">
    <div><img src="~/assets/image/slide_3_v4.jpg" width="100%" alt=""></div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-10 wizardPlagin">
                <form method="POST" action=" " class="needs-validation">
                    <div id="app">
                        <step-navigation :steps="steps" :currentstep="currentstep">
                        </step-navigation>

                        @*Kecidlerin Partial view ile cagirilmasi (start)*@
                        <partial name="_PartialPassageStep1" />
                        <partial name="_PartialPassageStep2" />
                        <partial name="_PartialPassageStep3" />
                        <partial name="_PartialPassageStep4" />

                        @*Kecidlerin Partial view ile cagirilmasi (end)*@

                        <step v-for="step in steps" :currentstep="currentstep" :key="step.id" :step="step"
                              :stepcount="steps.length" @@step-change="stepChanged">
                        </step>

                        <script type="x-template" id="step-navigation-template">
                            <ol class="step-indicator">
                                <li v-for="step in steps" is="step-navigation-step" :key="step.id" :step="step" :currentstep="currentstep">
                                </li>
                            </ol>
                        </script>

                        <script type="x-template" id="step-navigation-step-template">
                            <li :class="indicatorclass">
                                <div class="step"><i :class="step.icon_class"></i></div>
                                <div class="caption hidden-xs hidden-sm">Step <span v-text="step.id"></span>: <span v-text="step.title"></span></div>
                            </li>
                        </script>

                        <script type="x-template" id="step-template">
                            <div class="step-wrapper" :class="stepWrapperClass">
                                <button type="button" class="btn btn-primary" @@click="lastStep" :disabled="firststep">
                                    Back
                                </button>
                                <button type="button" class="btn btn-primary" @@click="nextStep" :disabled="laststep">
                                    Next
                                </button>
                                <button type="submit" class="btn btn-primary" v-if="laststep">
                                    Submit
                                </button>
                            </div>
                        </script>
                    </div>
                </form>
            </div>
            <div class="col-lg-1"></div>
        </div>
    </div>
</section>

<script>
    if (localStorage.getItem('btnValueKey') == 'activ') {
        $('#hourly').css("display", "block")
    } else if (localStorage.getItem('btnValueKey') == 'deactiv') {
        $('#hourly').css("display", "none")

    }

    if (localStorage.getItem('btnCarTypeValueKey') == 'activ') {
        $('#carType').css("display", "block")
    } else if (localStorage.getItem('btnCarTypeValueKey') == 'deactiv') {
        $('#carType').css("display", "none")

    }

    if (localStorage.getItem('btnBettingValueKey') == 'activ') {
        $('#betting ').css("display", "block")
        $('#bettingTitleH4 ').css("display", "block")
    } else if (localStorage.getItem('btnBettingValueKey') == 'deactiv') {
        $('#betting').css("display", "none")
        $('#bettingTitleH4').css("display", "none")

    }
</script>