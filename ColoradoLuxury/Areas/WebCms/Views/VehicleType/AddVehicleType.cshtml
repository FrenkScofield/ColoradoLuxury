@model ColoradoLuxury.Models.BLL.VehicleType
@{
    ViewData["Title"] = "AddVehicleType";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}

<link href="/admin/css/vehicletype.css" />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form class="form-horizontal" asp-action="AddVehicleType" role="form">
            <fieldset>

                <!-- Form Name -->
                <legend style="width:44%;">Add Vehicle Type</legend>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Type Name</label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="write name..." name="vehicleType" class="form-control">
                    </div>
                    <div class="col-sm-10">
                        <input type="text" placeholder="per mile" step="any" name="permile" id="permile" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="pull-right" style="float:right;">
                            <a href="index" class="btn btn-default">Cancel</a>
                            <button type="submit" class="btn btn-outline-success">Add</button>
                        </div>
                    </div>
                </div>

            </fieldset>
        </form>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->

<span class="validation">@Html.ValidationMessage("PerMile")</span>

<script src="~/lib/jquery/jquery3.6.4/jquery3.6.4.js"></script>
<partial name="_ValidationScriptsPartial" />

<script src="~/admin/js/vehicletype/vehicletype.js"></script>