
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 my-4">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                CALCULATION METHODS
            </div>
            <div class="card-body">

                <table class="table table-bordered col-8">
                    <tbody>
                        <tr>
                            <td style="font-weight: 700;text-align: center; font-size: 20px;">
                                Service
                            </td>
                            <td style="font-weight: 700;text-align: center; font-size: 20px;">
                                Methot
                                </td>
                        </tr>
                        <tr>
                            <td style ="text-align:center;">Distance</td>
                            <td style="text-align:center;">
                                <button type="button" class="btn btn-outline-primary mr-2">Distance</button>
                                <button type="button" class="btn btn-outline-primary">Distance + Duration</button>
                                </td>
                        </tr>
                    </tbody>
                </table>
             

            </div>
            <hr />
            <div class="card-header py-4">
                GRATUITY
            </div>
            <div class="card-body">

                <div class="col-12">
                    <label class="ShowOrNotshowLabelText">Betting Section</label>
                    <select class="form-select btnShowOrNotshow" id="btnBetting">
                        <option value="activ">Show</option>
                        <option value="deactiv">Not Show</option>
                    </select>

                </div>
              
            </div>
        </div>
    </div>
</div>

<script>
    //=============Betting Show or Notshow============

    const timeZoneList = document.getElementById('btnBetting');

    timeZoneList.addEventListener('change', (event) => {
        let currentArea = event.target.value;
        localStorage.setItem('btnBettingValueKey', currentArea);
    });

    if (localStorage.getItem('btnBettingValueKey')) {
        timeZoneList.value = localStorage.getItem('btnBettingValueKey');
    }
</script>

