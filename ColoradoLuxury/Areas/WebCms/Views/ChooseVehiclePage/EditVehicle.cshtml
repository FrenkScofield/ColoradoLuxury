@using ColoradoLuxury.Models.VM;
@model VehicleBrandVM
@{
    ViewData["Title"] = "EditVehicle";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<style>
    .form-select {
        margin-left: 11px;
        height: 39px;
        color: grey;
        width: 78%;
    }

    fieldset {
        padding-bottom: 12px;
    }

    legend {
        color: #959595;
        padding-left: 25px;
        width: 48%;
        margin-top: -17px;
    }
</style>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form class="form-horizontal" role="form" method="post">
            <fieldset>

                <!-- Form Name -->
                <legend>Edit Vehicle</legend>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Name</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Vehicle.Name" placeholder="Name..." value="@Model.Vehicle.Name" class="form-control">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Model</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Vehicle.Model" placeholder="Model..." value="@Model.Vehicle.Model" class="form-control">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Type</label>
                    <select class="form-select" asp-for="Vehicle.VehicleTypeId">
                        <option value="">Select</option>
                        @foreach (var vehicleType in Model.VehicleTypes)
                        {
                            <option value="@vehicleType.Id">@vehicleType.TypeName</option>

                        }
                 
                    </select>
                    <span style="color: red">@Html.ValidationMessage("Vehicle.VehicleTypeId")</span>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Color</label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="Color..." asp-for="Vehicle.Color" value="@Model.Vehicle.Color" class="form-control">
                    </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Engin</label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="Engin.." asp-for="Vehicle.Engine" value="@Model.Vehicle.Engine" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Fuel Type</label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="Fuel.." asp-for="Vehicle.Fuel" value="@Model.Vehicle.Fuel" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="pull-right" style="float:right;">
                            <a href="index" class="btn btn-default">Cancel</a>
                            <button type="submit" class="btn btn-outline-warning">Edit</button>
                        </div>
                    </div>
                </div>

            </fieldset>
        </form>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
