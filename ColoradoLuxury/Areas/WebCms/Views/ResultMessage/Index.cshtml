@model ResultMessage
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        form {
            width: 100%;
        }
    </style>
</head>

<div class="container">
    <div class="row">
        <form action="/WebCms/Resultmessage/AddOrUpdate" method="post">
            <div class="col-lg-12">
                <div>
                    <label>Success message</label>
                    <textarea id="success-message" asp-for=SuccessMessage class="form-control">
                        @Model.SuccessMessage
                </textarea>
                </div>
            </div>

            <div class="col-lg-12">
                <div>
                    <label>Fail message</label>
                    <textarea id="success-message" asp-for=FailMessage class="form-control">
                        @Model.FailMessage
                </textarea>
                </div>
            </div>

            <input type="submit" class="btn btn-success" value="Save" />
        </form>

    </div>
</div>

